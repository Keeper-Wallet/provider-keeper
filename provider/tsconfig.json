{
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "experimentalDecorators": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "outDir": "./dist",
    "pretty": true,
    "target": "es6",
    "types": [
      "@waves/waveskeeper-types",
      "node",
      "mocha",
      "chai"
    ]
  },
  "extends": "../tsconfig.json"
}
