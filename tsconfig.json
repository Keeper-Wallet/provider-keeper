{
  "include": ["src"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "outDir": "./dist",
    "pretty": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "types": ["@waves/waveskeeper-types"]
  }
}
