{
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "scripthost"
    ],
    "module": "commonjs",
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@waves/provider-keeper": [
        "./packages/components/src"
      ],
      "@waves/provider-keeper/*": [
        "./packages/components/src/*"
      ]
    },
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "../../node_modules",
    "dist",
  ]
}
